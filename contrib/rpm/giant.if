
## <summary>policy for giant</summary>


########################################
## <summary>
##	Transition to giant.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`giant_domtrans',`
	gen_require(`
		type giant_t,giant_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, giant_exec_t, giant_t)
')


########################################
## <summary>
##	Execute giant server in the giant domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`giant_initrc_domtrans',`
	gen_require(`
		type giant_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, giant_initrc_exec_t)
')


########################################
## <summary>
##	Search giant lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`giant_search_lib',`
	gen_require(`
		type giant_var_lib_t;
	')

	allow $1 giant_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

