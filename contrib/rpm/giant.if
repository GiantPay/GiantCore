########################################
## <summary>
##	All of the rules required to administrate
##	a giant environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`giant_admin',`
	gen_require(`
		type giant_t;
		type giant_initrc_exec_t;
		type giant_var_lib_t;
	')

	allow $1 giant_t:process { ptrace signal_perms };
	ps_process_pattern($1, giant_t)

	giant_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 giant_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, giant_var_lib_t)

')

